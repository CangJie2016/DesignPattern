<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cangjie.designpatternexercise.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SimpleFactoryPattern"
                android:onClick="simpleFactoryPattern"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AbstractFactoryPattern"
                android:onClick="AbstractFactoryPattern"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Singleton"
                android:onClick="Singleton"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prototype"
                android:onClick="Prototype"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Builder"
                android:onClick="Builder"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adapter"
                android:onClick="Adapter"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Composite"
                android:onClick="Composite"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decorator"
                android:onClick="Decorator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facade"
                android:onClick="Facade"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
